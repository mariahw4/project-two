{{#each listings as |listing| }}
<div class="container-fluid d-flex justify-content-center" style="width: 100%; height: 20rem;">
    <div class="card mb-3 col-7" style="max-width: 80%;">
        <div class="row g-0">
            <div class="col-md-4">
                <a href="/api/listings/{{listing.id}}"><img src="/images/kermit.jpg" class="img-fluid rounded-start object-fit" alt="kermit-plushie"
                    style="max-height: 18.9rem; width: 100%;"></a>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                     <a href="/api/listings/{{listing.id}}"><h5 class="card-title">{{listing.title}}</h5></a>
                    <p class="card-text">{{listing.description}}</p>
                    <p class="card-text"><small class="text-muted">Posted by {{listing.user.name}} on {{format_date listing.date_created}}</small></p>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}